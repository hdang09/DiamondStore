@page
@model RazorPage.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
<style>
    .no-underline {
        text-decoration: none;
    }

    .gradient-icon {
        font-size: 1.25rem;
        background: linear-gradient(to right, #ef4444, #3b82f6); /* Matching the gradient from the logo */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid #dee2e6;
        border-radius: 0.75rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .container {
        max-width: 1200px;
    }

    .card-title {
        color: #3b82f6; /* Blue color to match the theme */
    }

    .input-group-text {
        background: linear-gradient(to right, #ef4444, #3b82f6); /* Matching the gradient from the logo */
        border: none;
        color: white;
    }

    .btn-primary {
        background: linear-gradient(to right, #ef4444, #3b82f6); /* Matching the gradient from the logo */
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #ef4444, #3b82f6); /* Matching the gradient from the logo */
            border: none;
        }

    body {
        background: linear-gradient(to right, #ef4444, #3b82f6); /* Matching the gradient from the logo */
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <partial name="_Toast" />
    <div class="row justify-content-center w-100">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    <!-- Alert for Error Messages -->
                    @* Uncomment this if you want to display error messages *@
                    @* @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                    <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                    </div>
                    } *@

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email address</label>
                            <div class="input-group">
                                <span class="input-group-text" id="email-addon"><i class="fas fa-envelope gradient-icon"></i></span>
                                <input asp-for="Input.Email" type="email" class="form-control" aria-describedby="emailHelp">
                            </div>
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text" id="password-addon"><i class="fas fa-lock gradient-icon"></i></span>
                                <input asp-for="Input.Password" type="password" class="form-control">
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <h3 align="center" style="color:red"> @Html.ValidationMessage("Error") </h3>
                    </form>
                    <div class="mt-3 text-center">
                        <p>
                            <a asp-page="/Account/Register" class="no-underline">Do not have an account? Register Now</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
